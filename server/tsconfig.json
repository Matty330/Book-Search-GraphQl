{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "target": "ES2020",
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": false,
    "strict": false
  },
  "include": ["src"],
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ]
}